<form class="form {{ bemMix }}" action="{{ action }}" method="{{ method ?? 'get'}}">
	<p class="form__description">{{ description }}</p>

	{% for field in fields %}
		<p class="form__group {{ wideModifier }} {{ lastModifier }}">
			{{ field }}
		</p>
	{% endfor %}

	<button class="form__btn btn" type="submit">{{ submitText }}</button>
</form>
